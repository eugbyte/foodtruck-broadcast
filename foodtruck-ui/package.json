{
	"name": "foodtruck-ui",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"clear": "rm -rf .svelte-kit && npx npkill",
		"dev": "vite dev --mode=staging",
		"build": "pnpm run fmt && rm -rf build && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:e2e": "playwright test --ui",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"fmt": "prettier --plugin-search-dir . --write .",
		"ws": "node e2e-tests/mock/ws-server/server.js",
		"compose": "docker compose build --no-cache && docker compose up --detach --force-recreate",
		"compose:prune": "docker compose down && docker system prune && docker volume prune"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.2",
		"@floating-ui/dom": "^1.5.1",
		"@mapbox/mapbox-gl-geocoder": "^5.0.1",
		"@mapbox/search-js-core": "1.0.0-beta.17",
		"@playwright/test": "^1.36.2",
		"@skeletonlabs/skeleton": "^2.0.0",
		"@skeletonlabs/tw-plugin": "^0.1.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.5.0",
		"@tailwindcss/forms": "^0.5.5",
		"@tailwindcss/typography": "^0.5.9",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/svelte": "^4.0.3",
		"@turf/turf": "^6.5.0",
		"@types/debounce-promise": "^3.1.6",
		"@types/geojson": "^7946.0.10",
		"@types/lodash.debounce": "^4.0.7",
		"@types/mapbox-gl": "^2.7.11",
		"@types/ngeohash": "^0.6.4",
		"@types/node": "^20.5.7",
		"@types/testing-library__jest-dom": "5.14.9",
		"@types/ws": "^8.5.5",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"axios": "^1.4.0",
		"c8": "^8.0.0",
		"cross-env": "^7.0.3",
		"date-fns": "^2.30.0",
		"debounce-promise": "^3.1.2",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"jsdom": "22.1.0",
		"mapbox-gl": "^2.15.0",
		"nanoid": "^5.0.1",
		"ngeohash": "^0.6.3",
		"postcss": "^8.4.25",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"random": "^4.1.0",
		"rxjs": "^7.8.1",
		"svelte": "^3.54.0",
		"svelte-awesome": "3.2.0",
		"svelte-check": "^3.0.1",
		"svelte-htm": "^1.2.0",
		"sveltekit-superforms": "^1.8.0",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "0.33.0",
		"ws": "^8.13.0",
		"zod": "^3.22.4"
	}
}
